<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rubik_font"
            android:text="@string/timer"
            android:textColor="@color/text_color"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_more"
            app:tint="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/tv_timers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_numbers"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/tv_hour"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/rubik_font"
            android:text="00"
            android:textColor="@color/grey_text_color"
            android:textSize="46sp" />

        <TextView
            android:id="@+id/tv_hour_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/rubik_font"
            android:text="ч."
            android:layout_marginEnd="12dp"
            android:textColor="@color/grey_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_minute"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/rubik_font"
            android:text="00"
            android:textColor="@color/grey_text_color"
            android:textSize="46sp" />

        <TextView
            android:id="@+id/tv_minute_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/rubik_font"
            android:text="м."
            android:layout_marginEnd="12dp"
            android:textColor="@color/grey_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_second"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/rubik_font"
            android:text="00"
            android:textColor="@color/grey_text_color"
            android:textSize="46sp" />

        <TextView
            android:id="@+id/tv_second_letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/rubik_font"
            android:text="с."
            android:textColor="@color/grey_text_color"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:text="1"
                android:fontFamily="@font/rubik_font"
                android:layout_marginHorizontal="2dp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textSize="36sp"
                android:background="@drawable/bg_timer_btn"/>

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:text="2"
                android:fontFamily="@font/rubik_font"
                android:layout_marginHorizontal="2dp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textSize="36sp"
                android:background="@drawable/bg_timer_btn"/>

            <TextView
                android:id="@+id/tv_three"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:text="3"
                android:fontFamily="@font/rubik_font"
                android:layout_marginHorizontal="2dp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textSize="36sp"
                android:background="@drawable/bg_timer_btn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_four"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:text="4"
                android:fontFamily="@font/rubik_font"
                android:layout_marginHorizontal="2dp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textSize="36sp"
                android:background="@drawable/bg_timer_btn"/>

            <TextView
                android:id="@+id/tv_five"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:text="5"
                android:fontFamily="@font/rubik_font"
                android:layout_marginHorizontal="2dp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textSize="36sp"
                android:background="@drawable/bg_timer_btn"/>

            <TextView
                android:id="@+id/tv_six"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:text="6"
                android:fontFamily="@font/rubik_font"
                android:layout_marginHorizontal="2dp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textSize="36sp"
                android:background="@drawable/bg_timer_btn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_seven"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:text="7"
                android:fontFamily="@font/rubik_font"
                android:layout_marginHorizontal="2dp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textSize="36sp"
                android:background="@drawable/bg_timer_btn"/>

            <TextView
                android:id="@+id/tv_eight"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:text="8"
                android:fontFamily="@font/rubik_font"
                android:layout_marginHorizontal="2dp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textSize="36sp"
                android:background="@drawable/bg_timer_btn"/>

            <TextView
                android:id="@+id/tv_nine"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:text="9"
                android:fontFamily="@font/rubik_font"
                android:layout_marginHorizontal="2dp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textSize="36sp"
                android:background="@drawable/bg_timer_btn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_two_zeros"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:text="00"
                android:fontFamily="@font/rubik_font"
                android:layout_marginHorizontal="2dp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textSize="36sp"
                android:background="@drawable/bg_timer_btn"/>

            <TextView
                android:id="@+id/tv_zero"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:text="0"
                android:fontFamily="@font/rubik_font"
                android:layout_marginHorizontal="2dp"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:textSize="36sp"
                android:background="@drawable/bg_timer_btn"/>

            <ImageView
                android:id="@+id/tv_remove"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_marginHorizontal="2dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_backspace"
                android:padding="36dp"
                android:background="@drawable/bg_timer_btn"
                android:backgroundTint="@color/add_btn_color"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="250dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/time_picker_hand_color"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#A8C8Fb"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground"
                android:padding="36dp"
                android:src="@drawable/ic_play"
                app:tint="#062D6E"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>